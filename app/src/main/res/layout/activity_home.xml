<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home">

    <ImageView
        android:id="@+id/panel_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/home_panel" />

    <Button
        android:id="@+id/Button_home"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/cardview_shadow_end_color"
        android:text="@null"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/panel_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/panel_home" />

    <Button
        android:id="@+id/Button_wallet"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="124dp"
        android:backgroundTint="@color/cardview_shadow_end_color"
        android:text="@null"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/panel_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/panel_home"
        app:layout_constraintVertical_bias="0.541" />

    <Button
        android:id="@+id/Button_track"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="228dp"
        android:backgroundTint="@color/cardview_shadow_end_color"
        android:text="@null"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/panel_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/panel_home"
        app:layout_constraintVertical_bias="0.541" />

    <Button
        android:id="@+id/Button_profile"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="336dp"
        android:backgroundTint="@color/cardview_shadow_end_color"
        android:text="@null"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/panel_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/panel_home"
        app:layout_constraintVertical_bias="0.541" />

</androidx.constraintlayout.widget.ConstraintLayout>